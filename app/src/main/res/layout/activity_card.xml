<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent" android:layout_height="100dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="3dp"
        android:layout_margin="4dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background">

            <ImageView
                android:layout_height="0dp"
                app:srcCompat="@drawable/ic_image_black_48dp"
                android:id="@+id/activity_image_view"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_width="90dp" />

            <android.support.constraint.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="210dp"
                android:layout_height="0dp"

                android:id="@+id/details"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toRightOf="@+id/activity_image_view"
                android:layout_marginLeft="8dp"
                app:layout_constraintRight_toLeftOf="@+id/activity_menu_button"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:weightSum="1">

                <TextView
                    android:text="Activity name"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_title_text_view"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:text="Description, Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla luctus pretium metus, in fermentum eros consectetur non. Phasellus nec nulla tempor, suscipit tortor non, egestas erat. Nulla ut accumsan libero"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_description_text_view"
                    android:textSize="13sp"
                    android:lines="2"
                    android:textColor="@color/grey_800"
                    android:singleLine="false"
                    app:layout_constraintRight_toRightOf="@+id/activity_title_text_view"
                    app:layout_constraintTop_toBottomOf="@+id/activity_title_text_view"
                    app:layout_constraintLeft_toLeftOf="@+id/activity_title_text_view"
                    app:layout_constraintHorizontal_bias="1.0" />

                <TextView
                    android:text="3.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rating_text_view"
                    app:layout_constraintTop_toBottomOf="@+id/activity_description_text_view"
                    android:textSize="12sp"
                    android:textColor="@color/grey_800"
                    app:layout_constraintBottom_toBottomOf="@+id/activity_rating_bar"
                    android:layout_marginStart="8dp"
                    app:layout_constraintLeft_toRightOf="@+id/activity_rating_bar"
                    android:layout_marginLeft="8dp" />

                <RatingBar
                    android:theme="@style/RatingBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_rating_bar"
                    style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                    android:numStars="5"
                    android:rating="3.5"
                    android:isIndicator="false"
                    app:layout_constraintTop_toBottomOf="@+id/activity_description_text_view"
                    app:layout_constraintLeft_toLeftOf="@+id/activity_description_text_view"
                    android:hapticFeedbackEnabled="true"
                    android:stepSize="0.5" />

            </android.support.constraint.ConstraintLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_action_navigation_more_vert"
                android:id="@+id/activity_menu_button"
                android:onClick="showPopup"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:hapticFeedbackEnabled="true" />

            <TextView
                android:text="$1.23"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/price_text_view"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/green_500"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>