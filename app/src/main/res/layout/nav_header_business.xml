<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/drawer_background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tile2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignBottom="@+id/drawerUserNameTextView"
            android:layout_alignLeft="@+id/drawerUserNameTextView"
            android:layout_alignStart="@+id/drawerUserNameTextView"

            android:layout_marginBottom="32dp"
            android:src="@drawable/chef_chip"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp" />

        <TextView
            android:id="@+id/drawerEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/drawerUserNameTextView"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/drawerUserNameTextView"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif-regular"
            android:text="email@email.com"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/drawerUserNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/drawerEmailTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="User Name"
            android:textColor="@color/white" />
    </RelativeLayout>


</FrameLayout>
