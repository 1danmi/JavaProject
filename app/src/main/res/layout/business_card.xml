<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent" android:layout_height="100dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="3dp"
        android:layout_margin="4dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background">

            <ImageView
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_image_black_48dp"
                android:id="@+id/logoImageView"
                android:layout_width="92dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="4dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/logoImageView"
                android:layout_toLeftOf="@+id/businessMenuButton"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/details">

                <TextView
                    android:text="Title"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/businessTitleTextView"
                    android:textSize="16sp" />

                <TextView
                    android:text="dd STREET Street, City"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/businessAddressTextView"
                    android:textSize="13sp"
                    android:lines="2" />

                <TextView
                    android:text="28 Activities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/numOfActivities"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_action_navigation_more_vert"
                android:id="@+id/businessMenuButton"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:onClick="showPopup"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>