<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/suggestion_root_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="130dp"
                android:layout_height="130dp">

                <ImageView
                    android:id="@+id/suggestion_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/grey_800"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:srcCompat="@drawable/food1"
                    android:transitionName="@string/transition_collection_background"/>

                <View
                    android:id="@+id/suggestion_image_scrim"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/scrim" />
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/suggestion_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4dp"
                    android:text="12.34"
                    android:textColor="@color/green_500"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/suggestion_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="start|bottom"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:text="Salmon"
                    android:maxLines="1"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/suggestion_feature_text"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="4dp"

                    android:background="@drawable/chip"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingEnd="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="1dp"
                    android:maxLines="1"
                    android:text="Feature"
                    android:textColor="@color/white"
                    android:textSize="11sp" />

            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>