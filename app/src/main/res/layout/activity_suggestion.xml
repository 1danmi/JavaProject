<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/suggestion_root_layout">

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="205dp"
        android:layout_margin="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/suggestion_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/grey_800"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:srcCompat="@drawable/food1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/scrim"
                    android:id="@+id/suggestion_image_scrim" />
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/suggestion_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="12.34"
                    android:textSize="16sp"
                    android:textColor="@color/green_500"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/suggestion_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="start|bottom"
                    android:text="Salmon"
                    android:textColor="@color/primary_text"
                    android:textSize="24sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                     />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feature"
                    android:background="@drawable/chip"
                    android:textColor="@color/white"
                    android:id="@+id/suggestion_feature_text"
                    android:textSize="12sp"
                    android:gravity="center"

                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="4dp" />

            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>